<html>
    <head>
        <%- include('./titleAndCssLink',{title:title}); %>

    </head>
    <body>   
        
        <%- include('./sideBar'); %>
        <div class="rightContainer">
            <%- include('./header'); %>
            <div class="formContainer">
                <h3><%= title %></h3>
                
                <form method="POST">
                    <label for="labelName">Label Name :
                        <br><input type="text" name="labelName" id="labelName" required  value= "<%= typeof label === "undefined" ? "" : label[0].labelname  %>" >
                    </label>
                    <br><br>
                    <label for="yearFounded">Year Founded :
                        <br><input type="number" name="yearFounded" id="yearFounded" required value= <%=typeof label === "undefined" ? "" : label[0].yearfounded  %> >
                    </label>
                    <br><br>
                    <button type="submit"><%=typeof label === "undefined" ? "Create Label" : "Update Label"  %></button>
                </form>
            </div>
        </div>

    </body>
</html>