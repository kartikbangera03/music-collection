<html>
    <head>
        <title>Homepage</title>
        <link rel="stylesheet" type="text/css" href="/css/styles.css" />

    </head>
    <body>   
        
        <%- include('./sideBar'); %>
        <div class="rightContainer">
            <%- include('./header'); %>

            <div class="infoContainer">
                <h3>ALL ALBUMS</h3>
                <div class="mainContainer">
                    
                    <% for(let i=0;i<allAlbums.length ; i++) { %>
                        <div class="eachItem eachAlbum">
                            <div class="itemImage">
                                <a href="/album/<%=allAlbums[i].id%>"><img src="<%=allAlbums[i].imageurl%>" alt="albumImage"></a>
                            </div>
                            <div class="albumCardDetails">
                                <a href="/album/<%=allAlbums[i].id%>"><p class="itemHeading"><%=allAlbums[i].albumname%></p></a>
                                <a href="/artist/<%=allAlbums[i].artist_id%>"><p class="itemMinorInfo"><%=allAlbums[i].firstname + " " + allAlbums[i].lastname%></p></a>
                                <% const d =  new Date(allAlbums[i].releasedate).getFullYear()%>
                                <!-- <p><%= allAlbums[i].releasedate %></p> -->
                                <p class="itemMinorInfo"><%= d %></p>
    
                            </div>
    
                        </div>
                    <%}%>
                </div>

            </div>
           
        </div>

    </body>
</html>