<html>
    <head>
        <%- include('./titleAndCssLink',{title:title}); %>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>   
        <%- include('./sideBar'); %>
        <div class="rightContainer">
            <%- include('./header'); %>

                <div class="infoContainer missingPaddingTop">
                    <div class="dashBoardContainer">
                        <div class="albumsCountCard countCard">
                            <div> <span class="countValue"><%=albumCount%> </span> Total Albums</div>
                            <a href="/category/albums">More Info <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
                        </div>
                        <div class="releasesCountCard countCard">
                            <div> <span class="countValue"><%=releaseCount%></span>  Items in Stock</div>
                            <a href="/category/releases">More Info <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
                        </div>
                        <div class="lowReleaseCountCard countCard">
                            
                            <div ><span class="countValue"><%=lowStockReleaseCount%></span>  Items Low in Stock</div>
                            <a href="/lowStockReleases"> More Info <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
                        </div>
                    </div>                  
                    <%- include("showReleases" ,{allReleases : allReleases }) %>          
                </div>            
        </div>
    </body>
</html>